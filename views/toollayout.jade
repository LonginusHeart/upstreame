extend layout

block mainscript

block sources
  link(rel="stylesheet", href="css/toollayout.css")
  link(rel="stylesheet", href="animate.css/animate.min.css")
  link(rel="stylesheet", href="font-awesome/css/font-awesome.min.css")
  block mainscript

block content
  #nav-header.navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      block navbar-title
      if loggedIn
        form#login-form.navbar-form.navbar-right(hidden)
          .form-group
            label.sr-only Username
            input#username-field.form-control(type="text" placeholder="username" name="username")
          .form-group
            label.sr-only Password
            input#password-field.form-control(type="password" placeholder="password" name="password")
          input#login-button.btn.btn-info(type="button" value="Sign in")
        form#logout-form.navbar-form.navbar-right
          input#logout-button.btn.btn-info(type="button" value="Sign out")
      else
        form#login-form.navbar-form.navbar-right
          .form-group
            label.sr-only Username
            input#username-field.form-control(type="text" placeholder="username" name="username")
          .form-group
            label.sr-only Password
            input#password-field.form-control(type="password" placeholder="password" name="password")
          input#login-button.btn.btn-info(type="button" value="Sign in")
        form#logout-form.navbar-form.navbar-right(hidden)
          input#logout-button.btn.btn-info(type="button" value="Sign out")

  .container-fluid
    .row-fluid.content-container
      .canvas-container
        block mainarea
      .control-container.well
        #status-alert.alert.alert-danger(hidden)
        block wellarea
